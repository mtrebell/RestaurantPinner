<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Address:"
        />

    <TextView
        android:id="@+id/restraunt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/address"
        />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:layout_marginRight="5dp"
        android:layout_below="@id/restraunt_address"
        />

    <TextView
        android:id="@+id/restraunt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/restraunt_address"
        android:layout_toRightOf="@id/phone"
        />


    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hours"
        android:layout_marginRight="5dp"
        android:layout_below="@id/restraunt_phone"
        />

    <TextView
        android:id="@+id/restraunt_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restraunt_phone"
        android:layout_toRightOf="@id/hours"
        />

</merge>