<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.restaurantapp.phoneapp.restaurantpinner.FilterActivity"
    android:orientation="vertical">

    <include layout="@layout/pin_table"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.2"
    android:layout_gravity="center_horizontal">
<Button
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:text="@string/button_filter_text"
    android:id="@+id/buttonFilter"
    android:onClick="onClick"
    android:layout_weight="0.5"
    />

<Button
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.5"
    android:text="@string/button_clear_text"
    android:id="@+id/buttonClear"
    android:layout_alignBottom="@+id/buttonFilter"
    android:onClick="onClick"/>
</LinearLayout>
</LinearLayout>