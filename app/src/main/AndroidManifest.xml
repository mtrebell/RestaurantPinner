<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restaurantapp.phoneapp.restaurantpinner" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.restaurantapp.phoneapp.restaurantpinner.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDPCDwlMc3Tqx-PHbPikq36XaV1xPMp-3o" />

        <activity
            android:name="com.restaurantapp.phoneapp.restaurantpinner.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.restaurantapp.phoneapp.restaurantpinner.SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName="com.restaurantapp.phoneapp.restaurantpinner.MainActivity"
            android:theme="@android:style/Theme.Holo.Dialog" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MyActivity" />
        </activity>
        <activity
            android:name="com.restaurantapp.phoneapp.restaurantpinner.FilterActivity"
            android:label="@string/title_activity_filter"
            android:parentActivityName="com.restaurantapp.phoneapp.restaurantpinner.MainActivity"
            android:theme="@android:style/Theme.Holo.Dialog" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MyActivity" />
        </activity>
        <activity
            android:name="com.restaurantapp.phoneapp.restaurantpinner.NewPinActivity"
            android:label="@string/title_activity_addPin"
            android:parentActivityName="com.restaurantapp.phoneapp.restaurantpinner.MainActivity"
            android:theme="@style/Dialog" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fix.myapplication.MyActivity" />
        </activity>
        <activity
            android:name=".NotificationActivity"
            android:label="@string/title_activity_notification"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.restaurantapp.phoneapp.restaurantpinner.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.restaurantapp.phoneapp.restaurantpinner.PinActivity"
            android:label="@string/title_activity_pin"
            android:parentActivityName="com.restaurantapp.phoneapp.restaurantpinner.MainActivity"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fix.myapplication.MyActivity" />
        </activity>
        <activity
            android:name="com.restaurantapp.phoneapp.restaurantpinner.FriendActivity"
            android:label="@string/title_activity_friend" >
        </activity>
        <activity
            android:name="com.restaurantapp.phoneapp.restaurantpinner.MapActivity"
            android:label="@string/title_activity_map"
            android:theme="@android:style/Theme.Dialog" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fix.myapplication.MyActivity" />
        </activity>
    </application>

</manifest>
